<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ('../Template/head', { title: title } ); %>
    </head>
    <body>

        <header>
            <%- include ('../Template/header', { username: null, configHeader: configHeader, currpage : currpage  }); %>
        </header>
        

        <main>
            <div class="container"  >
                <H3>The goods in the shopping cart:</H3>
                <BR>
                <div class="table-responsive-lg table-striped  w-auto">
                    <table class="table table-striped table-hover">
                        <thead>
                          <tr>
                            <th>#id</th>
                            <th>IMAGE</th>
                            <th>NAME PRODUCT</th>
                            <th>NUMBER</th>
                            <th>PRICE</th>
                            <th>TOTAL</th>
                          </tr>
                        </thead>
                        <tbody>
                    
                        <%if(itemlist != null) {%>
                        <%Object.keys(itemlist).forEach(function(item) { %>
                            <tr style="vertical-align:middle;align-items: center ;">
                                <td style="vertical-align:middle;align-items: center ;"><%=itemlist[item].id%></td>
                                <td> 
                                    <img class="card-img-top center" style="max-width:60px;max-height:60px;" src="/img/<%=itemlist[item].id%>.jpg" alt="Card image cap">
                                </td>
                                <td style="vertical-align:middle;align-items: center ;"><%=itemlist[item].name%></td>   
                                <td style="vertical-align:middle;align-items: center ;"><a>$</a><%=itemlist[item].price%></td>
                                <%const total = itemlist[item].price * itemlist[item].number%>
                                <td style="vertical-align:middle;align-items: center ;"><%=itemlist[item].total%></td>
                                   
                                
                            </tr>    
                           

                              
                        <% }); %>
                        <% }%>
                        
                        </tbody>
                    </table>
                    
                </div>

            </div>

        </main>
          
        
        <%- include ('../Template/footer'); %>


    </body>

</html> 