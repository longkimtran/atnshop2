<html>
    <head>
        <%- include ('../Template/head', { title: title } ); %>
        <link rel="stylesheet" href="../css/stylelogin.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <script src="js/jquery-1.11.1.min.js"></script>
        <link rel="stylesheet" href="../Js/jslogin.js">
    </head>
    
    <body>
        
        <header>
          <%- include ('../Template/header', { username: null, configHeader: configHeader, currpage : currpage  }); %>
        </header>
        
        <main>
          <div class="container"> 
            <div class="row vertical-center-row"> 
             <div class="col-md-4 col-center-block login-widget"> 
              <div> 
               <div class="modal-header"> 
                <h2 class="modal-title">Login</h2> 
               </div> 
               <div class="modal-body"> 
                <div class="box"> 
                 <div class="content"> 
                  <div style="text-align: center;" class="social"> 
                    <a class="circle github"> 
                      <i class="fa fa-github fa-fw"></i>
                    </a> 
                      <a id="google_login" class="circle google"> 
                        <i class="fa fa-google-plus fa-fw"></i> 
                      </a> 
                      <a id="facebook_login" class="circle facebook"> 
                        <i class="fa fa-facebook fa-fw"></i> 
                      </a> 
                  </div> 
                  <div style="text-align: center;" class="division"> 
                   <div class="line l"></div> OR
                   <div class="line r"></div> 
                  </div> 
              
                  <form action="" method="GET">
                    <div class="form-group">
                    <label for="username">Email address</label>
                    <input type="email" class="form-control" id="username" name="username" aria-describedby="emailHelp">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <center><button type="submit" class="btn btn-primary">Submit</button></center>
                    <center><a href="http://localhost:8081/user/create">Create account now!</a></center>
                </form>

            
          
        </main>

        <%- include ('../Template/footer'); %>
    </body>
</html>

